    <script>
        document.addEventListener('DOMContentLoaded', function () {
            document.getElementById('addProductForm').addEventListener('submit', function (event) {
                // Reset previous error messages
                resetErrors();
    
                // Perform validation
                if (!validateForm()) {
                    // Prevent form submission if there are errors
                    event.preventDefault();
                }
            });
    
            function resetErrors() {
                // Reset all error messages
                const errorElements = document.querySelectorAll('.error');
                errorElements.forEach((errorElement) => {
                    errorElement.textContent = '';
                });
            }
    
            function validateForm() {
                let isValid = true;
    
                // Validate product title
                const productTitle = document.getElementById('product_name').value.trim();
                if (productTitle === '') {
                    displayError('product_name-error', 'Product title cannot be empty.');
                    isValid = false;
                }
    
                // Validate product information
                const productInfo = document.querySelector('textarea[name="productInformation"]').value.trim();
                if (productInfo === '') {
                    displayError('productInformation-error', 'Product information cannot be empty.');
                    isValid = false;
                }
    
                // Validate full description
                const fullDescription = document.querySelector('textarea[name="description"]').value.trim();
                if (fullDescription === '') {
                    displayError('description-error', 'Full description cannot be empty.');
                    isValid = false;
                }
    
                // Validate regular price
                const regularPrice = document.querySelector('input[name="regularPrice"]').value.trim();
                if (isNaN(regularPrice) || regularPrice === '') {
                    displayError('regularPrice-error', 'Regular price should be a number.');
                    isValid = false;
                }
                // Validate category
                const categorySelect = document.querySelector('select[name="category"]');
                const selectedCategory = categorySelect.value;
                if (selectedCategory === 'Default') {
                    displayError('category-error', 'Please choose a category.');
                    isValid = false;
                }    
                // Validate avatar (file upload)
                const avatarInput = document.querySelector('input[name="avatar"]');
                if (avatarInput.files.length < 2) {
                    displayError('avatar-error', 'Please upload at least two files ');
                    isValid = false;
                }
                // Validate stock
                const stock = document.querySelector('input[name="stock"]').value.trim();
                if (isNaN(stock) || stock === '' || stock <= 0) {
                    displayError('stock-error', 'Stock should be a positive number.');
                    isValid = false;
                }
    
                return isValid;
            }
    
            function displayError(elementId, errorMessage) {
                // Display error message
                const errorElement = document.getElementById(elementId);
                errorElement.textContent = errorMessage;
                errorElement.classList.add('text-danger');

            }
        });
    </script>
    
      
      
      
      
