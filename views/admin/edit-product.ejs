                <div class="col-lg-6">
                    <div class="card mb-4">
                    <div class="card-header">
                        <h4>Basic</h4>
                    </div>
                    <div class="card-body">
                        <div class="mb-4">
                            <label for="product_name" class="form-label">Product title</label>
                            <input type="text" placeholder="Type here" class="form-control" id="product_name" name="title" value="<%= product.title %>">
                            <div class="error custom-error text-danger" id="product_name-error"></div>

                        </div>
                        <div class="mb-4">
                            <label class="form-label">Product Information</label>
                            <textarea placeholder="Type here" class="form-control" rows="4" name="productInformation"><%= product.productInformation  %></textarea>
                            <div class="error custom-error text-danger" id="productInformation-error"></div>
    
                        </div>
                        <div class="mb-4">
                            <label class="form-label">Full description</label>
                            <textarea placeholder="Type here" class="form-control" rows="4" name="description"><%= product.description %></textarea>
                            <div class="error custom-error text-danger" id="description-error"></div>
                        </div>
                        <div class="row">
                        <div class="col-lg-4">
                            <div class="mb-4">
                            <label class="form-label">Regular price</label>
                            <div class="row gx-2">
                                <input placeholder="$" type="number" class="form-control" name="regularPrice" value="<%= product.regularPrice %>">
                                <div class="error custom-error text-danger" id="regularPrice-error"></div>    
                            </div>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="mb-4">
                            <label class="form-label">Size</label>
                            <input placeholder="" type="" class="form-control" name="size" value="<%= product.size %>">
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="mb-4">
                            <label class="form-label">Stock</label>
                            <input placeholder="" type="number" class="form-control" name="stock" value="<%= product.stock %>">
                            </div>
                        </div>
                        </div>
                        <div class="mb-4">
                        <label class="form-label">Promotional Discount (optional)</label>
                        <input type="number" placeholder="%" class="form-control" id="productDiscount" name="productDiscount" value="<%= product.productDiscount %>">
                        </div>
                    </div>
                    </div>
                    <div class="card mb-4">
                    <div class="card-header">
                        <h4>Brand and Category</h4>
                    </div>
                    <div class="card-body">
                        <div class="row">
                        <div class="col-lg-4">
                            <label class="form-label">Brand</label>
                            <select class="form-select" name="brand">
                            <option <%= product.brand === 'SSS' ? 'selected' : '' %>>SSS</option>
                            <!-- Add other brand options as needed -->
                            </select>
                        </div>
                        <div class="col-lg-4">
                            <label class="form-label">Category</label>
                            <select class="form-select" name="category">
                            <% activeCategories.forEach(category => { %>
                               
                                <option value="<%= category.id %>" <%= category.id == product.category ? 'selected' : '' %>><%= category.name %></option>
                            <% }); %>
                            
                            </select>
                        </div>
                        </div>
                    </div>
                    </div>
