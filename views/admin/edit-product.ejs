                                <!-- <a href="/admin/delete-image/<%= product._id %>/<%= index %>" class="btn btn-md rounded font-sm hover-up">Delete Image</a> -->
                                <a href="#" class="btn btn-md rounded font-sm hover-up" onclick="deleteImage('<%= product._id %>', '<%= index %>')">Delete Image</a>
                            </div>
