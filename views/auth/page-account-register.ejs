    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        const setError = (element, message) => {
            const inputControl = element.parentElement;
            const errorDisplay = inputControl.querySelector('.error');

            errorDisplay.innerText = message;
            inputControl.classList.add('error');
            inputControl.classList.remove('success');
        };

        const setSuccess = element => {
            const inputControl = element.parentElement;
            const errorDisplay = inputControl.querySelector('.error');

            errorDisplay.innerText = '';
            inputControl.classList.remove('error');
            inputControl.classList.add('success');

            const successCount = document.querySelectorAll('.success').length;
            if (successCount === 5) {
                registrationForm.submit();
            }
        };

        const isValidEmail = email => {
            const re = /^(([^<>()[\]\\.,;:\s@"]+(\.[^<>()[\]\\.,;:\s@"]+)*)|(".+"))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/;
            return re.test(String(email).toLowerCase());
        };

        document.getElementById('sendOtpLink').addEventListener('click', function (event) {
            event.preventDefault(); // Prevent the default behavior of the link

            const emailValue = document.getElementById('registerEmail').value;
            const regEmail = document.getElementById('registerEmail');
            const emailErrorDisplay = document.getElementById('register-email-error');

            if (emailValue === '') {
                setError(regEmail, 'Email is required');
            } else if (!isValidEmail(emailValue)) {
                setError(regEmail, 'Provide a valid email address');
            } else {
                // Clear previous error messages for email
                emailErrorDisplay.innerText = '';

                // Proceed to send OTP
                fetch('/send-otp', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ email: emailValue }),
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        // Use SweetAlert to display success message
                        Swal.fire({
                            icon: 'success',
                            title: 'Success',
                            text: 'OTP sent successfully',
                        });
                    } else {
                        // Use SweetAlert to display error message
                        Swal.fire({
                            icon: 'error',
                            title: 'Error',
                            text: 'Failed to send OTP. Please try again.',
                        });
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                });
            }
        });
    </script>

